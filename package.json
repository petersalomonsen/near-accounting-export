{
  "name": "near-accounting-export",
  "version": "1.0.0",
  "description": "Gather NEAR account data history, tracking NEAR, Fungible Tokens, NEAR Intents and staking balance changes",
  "type": "module",
  "main": "dist/scripts/get-account-history.js",
  "bin": {
    "near-accounting-export": "./dist/scripts/get-account-history.js"
  },
  "scripts": {
    "build": "tsc",
    "prebuild": "rm -rf dist",
    "start": "npm run build && node dist/scripts/get-account-history.js",
    "api": "npm run build && node dist/scripts/api-server.js",
    "json-to-csv": "npm run build && node dist/scripts/json-to-csv.js",
    "analyze-gaps": "npm run build && node dist/scripts/analyze-gaps.js",
    "sanitize-json": "npm run build && node dist/scripts/sanitize-json.js",
    "test": "npm run build && mocha --timeout 60000 'dist/test/**/*.test.js'",
    "test:unit": "npm run build && mocha --timeout 60000 'dist/test/unit/**/*.test.js'",
    "test:integration": "npm run build && mocha --timeout 60000 'dist/test/integration/**/*.test.js'",
    "dev": "tsx scripts/get-account-history.ts"
  },
  "keywords": [
    "near",
    "accounting",
    "blockchain",
    "balance-tracker"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@near-js/jsonrpc-client": "^1.5.0",
    "@near-js/jsonrpc-types": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "mocha": "^11.7.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
